<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="Encanta Feature Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/encanta_set_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="Enter User Name"/>

        <Button
            android:id="@+id/btn_encanta_set_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Set Name"/>

    </LinearLayout>

    <Button
        android:id="@+id/encanta_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Encanta"/>

    <Button
        android:id="@+id/encanta_custom_action_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set string property 1"/>

    <Button
        android:id="@+id/encanta_custom_action_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment int property 2"/>

    <Button
        android:id="@+id/encanta_is_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is encanta enabled?"/>

    <Button
        android:id="@+id/encanta_get_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Unread Count"/>

    <Button
        android:id="@+id/encanta_get_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Encanta Version"/>

    <ToggleButton
        android:id="@+id/encanta_pause_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Notifications Enabled"
        android:textOn="Notifications Paused"/>

</LinearLayout>
